<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.project.lesson02.dao.StoreDAO">
 	<select id="selectStoreList" resultType="com.project.lesson02.model.Store">
 		select * from `store`
 	</select>
 	
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			`name`,
 			`loginID`,
 			`pw`,
 			`nickname`,
 			`email`,
 			`subEmail`,
 			`createdAt`,
			`updatedAt`
 		)
 		VALUES
 		(
 			#{name},
 			#{id},
 			#{pw},
 			#{nickname},
 			#{email},
 			#{subEmail},
 			NOW(),
 			NOW()
 		)
 	</insert>
 	
 	<select id="selectUser" parameterType="map" resultType="int">
 		select 
 			* 
 		from 
 			`user` 
 		where
 			`loginID` = #{id}
 		and
 			`pw` = #{pw}
 	</select>
 </mapper>